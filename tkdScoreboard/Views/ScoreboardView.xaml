<UserControl x:Class="tkdScoreboard.Views.ScoreboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tkdScoreboard.Views"
             xmlns:viewmodels="clr-namespace:tkdScoreboard.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <viewmodels:ScoreboardViewModel x:Key="scoreboard"/>
    </UserControl.Resources>

    <Grid
        DataContext="{Binding Source={StaticResource scoreboard}}"
        Background="Black">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu IsMainMenu="True" VerticalAlignment="Top" Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Header="Inicio">
                <MenuItem Header="Nuevo Combate"/>
                <MenuItem Header="Ajustes"/>
            </MenuItem>
            <MenuItem Header="Combate">
                <MenuItem Header="Iniciar Combate" Command="{Binding saludarCommand}"/>
                <MenuItem Header="Pausar/Reanudar Combate"/>
                <MenuItem Header="Video Replay"/>
                <MenuItem Header="Tiempo Medico"/>
                <MenuItem Header="Modificar Marcador"/>
                <MenuItem Header="Finalizar Round"/>
                <MenuItem Header="Siguiente Round"/>
                <MenuItem Header="Finalizar Combate"/>
            </MenuItem>
            <MenuItem Header="Dispositivos">
                <MenuItem Header="Puerto"/>
                <MenuItem Header="BaudRate">
                    <MenuItem Header="9600"/>
                    <MenuItem Header="9600"/>
                    <MenuItem Header="9600"/>
                    <MenuItem Header="9600"/>
                </MenuItem>
                <MenuItem Header="Test"/>
                <MenuItem Header="Monitor Serial"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="VS" Grid.Row="0" FontSize="30"/>
            <TextBlock Text="R1" Grid.Row="1" FontSize="30"/>
            <TextBlock Text="1:00" Grid.Row="2" FontSize="70"/>
            <TextBlock Text="Esperando" Grid.Row="3"/>
            <!--
            <Button Content="Hola" Command="{Binding saludarCommand}"></Button>
            -->
        </Grid>

        <Border Grid.Column="0" Grid.Row="1" Background="Blue">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Chung" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5" FontSize="40"/>
                <TextBlock Text="10" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="3" FontSize="180"/>

            </Grid>
        </Border>

        <Border Grid.Column="2" Grid.Row="1" Background="Red">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Hong" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5" FontSize="40"/>
                <TextBlock Text="10" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="3" FontSize="180"/>
                
            </Grid>
        </Border>
    </Grid>
</UserControl>
