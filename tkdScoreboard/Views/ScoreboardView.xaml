<UserControl x:Class="tkdScoreboard.Views.ScoreboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tkdScoreboard.Views"
             xmlns:viewmodels="clr-namespace:tkdScoreboard.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Focusable="True">

    <UserControl.DataContext>
        <viewmodels:ScoreboardViewModel/>
    </UserControl.DataContext>

    <Grid Background="Black">

        <Grid.InputBindings>
            <KeyBinding Key="Q" Command="{Binding ResumeRoundCommand}"/>
            <KeyBinding Key="W" Command="{Binding PauseRoundCommand}"/>
        </Grid.InputBindings>

        <!-- Definimos filas y columnas del marcador -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Menu de barra -->
        <Menu IsMainMenu="True" VerticalAlignment="Top" Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Header="Inicio">
                <MenuItem Header="Nuevo Combate"/>
                <MenuItem Header="Ajustes"/>
            </MenuItem>
            <MenuItem Header="Combate">
                <MenuItem Header="Iniciar/Reanudar Combate" Command="{Binding ResumeRoundCommand}"/>
                <MenuItem Header="Pausar Combate" Command="{Binding PauseRoundCommand}"/>
                <MenuItem Header="Video Replay"/>
                <MenuItem Header="Modificar Marcador"/>
                <MenuItem Header="Finalizar Round"/>
                <MenuItem Header="Siguiente Round" Command="{Binding NextRoundCommand}"/>
                <MenuItem Header="Finalizar Combate" Command="{Binding ResetMatchCommand}"/>
            </MenuItem>
            <MenuItem Header="Dispositivos">
                <MenuItem Header="Puerto"/>
                <MenuItem Header="BaudRate">
                    <MenuItem Header="9600"/>
                    <MenuItem Header="9600"/>
                    <MenuItem Header="9600"/>
                    <MenuItem Header="9600"/>
                </MenuItem>
                <MenuItem Header="Test"/>
                <MenuItem Header="Monitor Serial"/>
            </MenuItem>
        </Menu>
        
        <!-- Panel central -->
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="VS" Grid.Row="0" FontSize="30"/>
            <TextBlock Text="{Binding RoundDisplay}" Grid.Row="1" FontSize="30"/>
            <TextBlock Text="{Binding TimerDisplay}" Grid.Row="2" FontSize="70"/>
            <TextBlock Text="{Binding CurrentMatch.MatchState}" Grid.Row="3"/>
        </Grid>
        
        <!-- Panel Izquierdo (Jugador Azul) -->
        <Border Grid.Column="0" Grid.Row="1" Background="Blue">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding CurrentMatch.Player1.Name}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5" FontSize="40"/>
                <TextBlock Text="{Binding CurrentMatch.Player1.Points}" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="3" FontSize="180"/>
            </Grid>
        </Border>
        
        <!-- Panel Derecho (Jugador Rojo) -->
        <Border Grid.Column="2" Grid.Row="1" Background="Red">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding CurrentMatch.Player2.Name}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5" FontSize="40"/>
                <TextBlock Text="{Binding CurrentMatch.Player2.Points}" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="3" FontSize="180"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
