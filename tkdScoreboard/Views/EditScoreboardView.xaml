<Window x:Class="tkdScoreboard.Views.EditScoreboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:tkdScoreboard.Views"
        mc:Ignorable="d"
        Title="Editar Marcador" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Jugador 1 -->
        <TextBlock Text="{Binding Player1.Name}" Grid.ColumnSpan="2" FontWeight="Bold"/>

        <TextBlock Text="Puntos:" Grid.Row="1"/>
        <TextBox Text="{Binding Player1Points, Mode=TwoWay}" Grid.Row="1" Grid.Column="1"/>

        <TextBlock Text="Penalizaciones:" Grid.Row="2"/>
        <TextBox Text="{Binding Player1Penalties, Mode=TwoWay}" Grid.Row="2" Grid.Column="1"/>

        <!-- Jugador 2 -->
        <TextBlock Text="{Binding Player2.Name}" Grid.Row="3" Grid.ColumnSpan="2" FontWeight="Bold"/>

        <TextBlock Text="Puntos:" Grid.Row="4"/>
        <TextBox Text="{Binding Player2Points, Mode=TwoWay}" Grid.Row="4" Grid.Column="1"/>

        <TextBlock Text="Penalizaciones:" Grid.Row="5"/>
        <TextBox Text="{Binding Player2Penalties, Mode=TwoWay}" Grid.Row="5" Grid.Column="1"/>

        <!-- Botones -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="6" Grid.ColumnSpan="2">
            <Button Content="Cancelar" Command="{Binding CancelCommand}" Margin="5" Width="80"/>
            <Button Content="Guardar" Command="{Binding SaveCommand}" Margin="5" Width="80"/>
        </StackPanel>
    </Grid>
</Window>
